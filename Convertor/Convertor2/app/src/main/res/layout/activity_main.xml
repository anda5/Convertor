<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.convertor.convertor.MainActivity">


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="95dp"
        android:layout_height="51dp"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="75dp"
        android:layout_alignTop="@+id/usd"
        android:layout_alignLeft="@+id/spinner"
        android:layout_alignStart="@+id/spinner"
        android:layout_alignBottom="@+id/usd" />

    <EditText
        android:id="@+id/edit"
        android:layout_width="183dp"
        android:layout_height="52dp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="45dp"
        tools:text="edit"
        android:layout_alignTop="@+id/spinner"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="95dp"
        android:layout_height="51dp"
        tools:layout_editor_absoluteX="255dp"
        tools:layout_editor_absoluteY="75dp"
        android:layout_marginTop="65dp"
        android:layout_below="@+id/inr"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_toRightOf="@+id/edit"
        android:layout_toEndOf="@+id/edit" />

    <Button
        android:id="@+id/button"
        android:layout_width="319dp"
        android:layout_height="57dp"
        android:text="Convert"

        android:layout_below="@+id/edit"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp" />

    <TextView
        android:id="@+id/usd"
        android:layout_width="317dp"
        android:layout_height="45dp"
        android:text="t1"
        tools:layout_editor_absoluteX="34dp"
        tools:layout_editor_absoluteY="275dp"
        tools:text="text"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/button"
        android:layout_alignLeft="@+id/button"
        android:layout_alignStart="@+id/button"
        android:layout_alignRight="@+id/edit"
        android:layout_alignEnd="@+id/edit" />

</RelativeLayout>
